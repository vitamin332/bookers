  <%= @book.errors.count %>errors prohibited this book from being saved:<br>
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

  <%= form_with model:@book, local:true do |f| %>
  <h4>title</h4>
    <%= f.text_field :title %>
  <h4>body</h4>
    <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>

<% end %>